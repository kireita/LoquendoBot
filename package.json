{
    "name": "loquendo-bot",
    "version": "Pre-Alpha 2.0.0",
    "description": "Bot assistant for streamers over different platforms",
    "main": "./js/main.js",
    "scripts": {
        "start": "electron .",
        "releaseBuildWin": "electron-packager . --overwrite --ignore personal",
        "dist_mac": "electron-builder --macos",
        "dist_win": "electron-builder --win --x64",
        "dist_linux": "electron-builder --linux --x64",
        "dist-all": "electron-builder -mw"
    },
    "build": {
        "appId": "angular_electron.id",
        "asar": false,
        "extraFiles": [
            {
                "from": "resources/${os}",
                "to": "Resources"
            }
        ],
        "files": [
            "!**/Pipfile",
            "!**/readme.md",
            "!**/Pipfile.lock",
            "!**/license",
            "!**/.gitignore",
            "!**/.env",
            "!**/.vscode/*",
            "!**/loquendo-bot-win32-x64"
        ]
    },
    "keywords": [],
    "author": "Kees Rodriguez & Felipe Villanueva",
    "license": "ISC",
    "devDependencies": {
			"electron": "^15.0.0",
        "electron-builder": "^22.11.7",
        "electron-packager": "^15.4.0",
        "eslint": "^8.4.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-plugin-import": "^2.25.3"
    },
    "dependencies": {

        "aws4": "^1.11.0",
        "axios": "^0.24.0",
        "dotenv": "^10.0.0",
        "electron-remote": "^1.3.0",
        "event-chains": "^0.0.8",
        "https": "^1.0.0",
        "ini": "^2.0.0",
        "node-google-tts-api": "^1.1.1",
        "python-shell": "^3.0.0",
        "querystring": "^0.2.1",
        "request": "^2.88.2",
        "say": "^0.16.0",
        "ws": "^8.3.0",
        "youtube-chat": "^2.1.1"
    }
}
