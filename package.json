{
    "name": "loquendo-bot",
    "version": "1.0.0",
    "description": "Bot assistant for streamers over different platforms",
    "main": "./js/main.js",
    "scripts": {
        "start": "electron .",
        "releaseBuildWin": "electron-packager . --overwrite --ignore personal",
        "dist_mac": "electron-builder --macos",
        "dist_win": "electron-builder --win --x64",
        "dist_linux": "electron-builder --linux --x64",
        "dist-all": "electron-builder -mw"
    },
    "build": {
        "appId": "angular_electron.id",
        "asar": false,
        "extraFiles": [{
            "from": "resources/${os}",
            "to": "Resources"
        }],
        "files": [
            "!**/Pipfile",
            "!**/readme.md",
            "!**/Pipfile.lock",
            "!**/license",
            "!**/.gitignore",
            "!**/.env",
            "!**/.vscode/*",
            "!**/dist",
            "!**/loquendo-bot-win32-x64"
        ]
    },
    "keywords": [],
    "author": "Kees Rodriguez & Felipe Villanueva",
    "license": "ISC",
    "devDependencies": {
        "electron": "^15.0.0",
        "electron-builder": "^22.11.7",
        "electron-packager": "^15.4.0",
        "electron-reloader": "^1.2.1"
    },
    "dependencies": {
        "@ouduidui/notice": "^1.1.3",
        "electron-reload": "^2.0.0-alpha.1",
        "electron-remote": "^1.3.0",
        "electron-root-path": "^1.0.16",
        "ini": "^2.0.0",
        "jquery": "^3.6.0",
        "moment-timezone": "^0.5.33",
        "python-shell": "^3.0.0",
        "say": "^0.16.0",
        "speech-synthesis": "^0.3.2"
    }
}